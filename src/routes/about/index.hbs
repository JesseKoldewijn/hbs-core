<div
  class="flex min-h-screen w-full flex-col items-center justify-center gap-6 py-8 px-4 md:py-12"
>
  <div class="flex flex-col text-center">
    <h1 class="text-lg font-bold">About</h1>
    <p class="max-w-sm">This is the About page. And viewing this page will cost
      you about
      {{bc_money 69}}
      per minute</p>
  </div>

  <a href="/" class="button" hx-boost="true">
    <span class="button__text">
      Home
    </span>
  </a>

  <div class="flex flex-col gap-4">
    <h2 class="text-center text-lg font-bold">Items (rendered from server
      context)</h2>
    {{#if items}}
      <ul
        class="flex max-h-56 max-w-md flex-col items-center gap-4 overflow-y-auto px-2"
      >
        {{#each items as |item|}}
          <li
            data-id="{{item.id}}"
            class="border-contrast-foreground/60 mx-auto flex max-w-sm flex-col gap-0.5 rounded-lg border py-2 text-center"
          >
            <strong>{{item.name}}</strong>
            <p class="text-balance">{{item.content}}</p>
          </li>
        {{/each}}
      </ul>
    {{/if}}
  </div>
</div>