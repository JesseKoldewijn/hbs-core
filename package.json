{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "dotenv -- concurrently \"vite\" \"pnpm run compile:css:watch\"",
    "start": "dotenv -- vite preview",
    "build": "dotenv -- vite build",
    "compile:css": "postcss ./src/styles/tailwind.css -o ./public/styles/core.css",
    "compile:css:watch": "watch -d -p='/node_modules dist/i' 'pnpm run compile:css' ./",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@fastify/helmet": "^11.1.1",
    "@fastify/static": "^7.0.3",
    "@fastify/view": "^9.0.0",
    "@fastify/vite": "^6.0.6",
    "@t3-oss/env-core": "^0.9.2",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "glob": "^10.3.12",
    "handlebars": "^4.7.8",
    "watch": "^1.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.0.0-alpha.14",
    "@types/node": "^20.12.7",
    "@types/watch": "^1.0.6",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^7.4.1",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "4.0.0-alpha.14",
    "typescript": "^5.4.5",
    "vercel": "^34.0.0",
    "vite": "^5.2.9",
    "vite-plugin-node": "^3.1.0"
  }
}
